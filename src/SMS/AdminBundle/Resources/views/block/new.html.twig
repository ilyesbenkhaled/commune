{% extends 'SMSAdminBundle::base.html.twig' %}

{% block body %}
    <h1>Block creation</h1>
<div id="page-wrapper">
	<div class="row">
					<div class="col-lg-12">
						<h1 class="page-header">Ajout de texte</h1>
					</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
					<div class="panel-heading">
						Ajout Block
					</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-6">
											<form name="block" method="post" action="{{path('block_new')}} {{ form_enctype(form) }}">
											    <div id="block">
													<div class="form-group>
														<label for="block_titre" class="required">Titre</label>
														<input type="text" id="block_titre"  class="form-control" name="block[titre]" required="required" maxlength="255" />
													</div>
													<div class="form-group>
														<label for="block_ordre" class="required">Ordre</label>
														<input type="number" id="block_ordre"  class="form-control" name="block[ordre]" required="required" />
													</div>
													<div class="form-group>
														<label for="block_position" class="required">Position</label>
														 <select class="form-control" id="block_position" name="block[position]" required="required">
															<option>Left</option>
															<option>Right</option>
                                   
                                                         </select>
													</div>
													
													
													<div class="form-group>
														<label for="block_code" class="required">Code</label>
														<textarea id="block_code"  class="form-control" name="block[code]" required="required"></textarea>
													</div>
													<div class="form-group>
													 

													{% for langue in langues %}
												
														{{ langue.id}}
														{{ langue.fRFr}}
														 {% endfor %}
													</div>
													
											    </div>
											        <div class="form-group input-group">
									                  <span class="input-group-btn">
										               <button class="btn btn-default" type="submit"><i class="fa fa-plus"></i> Create
										               </button>
									                  </span>
								                    </div>
													<div class="form-group">
														<input type="hidden" name="form[_token]" value="{{ form._token.vars.value }}" />
													</div>
													<div class="form-group">
													   {{ form_errors(form) }}								  
													</div>
													<div class="form-group">
														{{ form_widget(form. _token) }}
													</div>
							                </form>

											<ul>
												<li>
													<a href="{{ path('block_index') }}">Back to the list</a>
												</li>
											</ul>
						</div>
				    </div>
			    </div>
		    </div>
        </div>  
    </div>
</div>

{% endblock %}

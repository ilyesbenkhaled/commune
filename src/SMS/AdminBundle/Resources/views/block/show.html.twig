{% extends 'SMSAdminBundle::base.html.twig' %}

{% block body %}
    <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header"></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Block
                        </div>
                        <!-- /.panel-heading -->
    
<div class="panel-body">
<table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
<thead>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ block.titre }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ block.ordre }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ block.position }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ block.code }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if block.datecreation %}{{ block.datecreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateupdate</th>
                <td>{% if block.dateupdate %}{{ block.dateupdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('block_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('block_edit', { 'id': block.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
